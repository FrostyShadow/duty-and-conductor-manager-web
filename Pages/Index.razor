@page "/"
@attribute [Authorize]
@inject IAuthenticationService AuthenticationService

<PageTitle>Dashboard</PageTitle>

<MudGrid>
    <MudItem xs="12">
        <MudText Typo="Typo.h4">Hello, @AuthenticationService.User.FirstName!</MudText>
    </MudItem>
    <MudItem xs="12" md="6">
        <MudCard>
            <MudCardHeader>
                <MudText Typo="Typo.h6">
                    Announcements
                </MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.body2">
                    No announcements to display
                </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12" md="6">
        <MudCard>
            <MudCardHeader>
                <MudText Typo="Typo.h6">
                    Upcoming shifts
                </MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.body2">
                    No upcoming shifts
                </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>


