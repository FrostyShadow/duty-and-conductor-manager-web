@page "/"
@attribute [Authorize]
@inject IAuthenticationService AuthenticationService

<PageTitle>Dashboard</PageTitle>

<MudText Typo="Typo.h4">Hello, @AuthenticationService.User.FirstName!</MudText>

<MudGrid>
    <MudItem xs="12" md="6">
        <MudCard>
            <MudCardHeader>
                <MudText Typo="Typo.h6">
                    Announcements
                </MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudGrid>
                    <Announcement 
                        FirstName="Test" 
                        LastName="Admin" 
                        PublishDate="@(new DateTime(2021,11,8,14,00,00))" 
                        Type="AnnouncementType.Info" 
                        AnnouncementBody="This is a test info announcement!"  />
                    <Announcement 
                        FirstName="Test" 
                        LastName="Admin" 
                        PublishDate="@(new DateTime(2021,11,8,13,00,00))" 
                        Type="AnnouncementType.Important" 
                        AnnouncementBody="This is a test important announcement!"  />
                </MudGrid>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12" md="6">
        <MudCard>
            <MudCardHeader>
                <MudText Typo="Typo.h6">
                    Upcomming shifts
                </MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.body2">
                    No upcomming shifts
                </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>