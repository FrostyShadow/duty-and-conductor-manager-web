<MudNavMenu>
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">@Localizer["nav-link-dashboard"]</MudNavLink>
    @if(AuthenticationService.User?.Role.Name == "Admin")
    {
        <MudNavGroup Title='@Localizer["nav-group-management"]' Icon="@Icons.Material.Filled.Settings" Expanded="true">
            <MudNavLink Href="/admin/user-list" Icon="@Icons.Material.Filled.People">@Localizer["nav-link-admin-user-list"]</MudNavLink>
            <MudNavGroup Title='@Localizer["nav-group-vehicle-management"]' Icon="@Icons.Material.Filled.DirectionsBus" Expanded="true">
                <MudNavLink Icon="@Icons.Material.Filled.List" Href="/admin/vehicle-list">@Localizer["nav-link-admin-vehicle-list"]</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.List" Href="/admin/model-list">@Localizer["nav-link-admin-model-list"]</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.List" Href="/admin/manufacturer-list">@Localizer["nav-link-admin-manufacturer-list"]</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.List" Href="/admin/set-list">@Localizer["nav-link-admin-set-list"]</MudNavLink>
            </MudNavGroup>
            <MudNavLink Href="/admin/line-list" Icon="@Icons.Material.Filled.Route">@Localizer["nav-link-admin-line-list"]</MudNavLink>
            <MudNavLink Href="/admin/brigade-list" Icon="@Icons.Material.Filled.Schedule">@Localizer["nav-link-admin-brigade-list"]</MudNavLink>
            <MudNavLink Href="/admin/announcement-list" Icon="@Icons.Material.Filled.Announcement">@Localizer["nav-link-admin-announcement-list"]</MudNavLink>
        </MudNavGroup>
    }
</MudNavMenu>