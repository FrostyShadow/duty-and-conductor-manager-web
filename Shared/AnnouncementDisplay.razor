<MudItem xs="12">
    <MudCard Outlined="true">
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudAvatar Color="Color.Primary">@FirstName[0]@LastName[0]</MudAvatar>
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.body1">@FirstName @LastName</MudText>
                <MudText Typo="Typo.body2">@Localizer["announcement-published-on"] @PublishDate.ToString("yyyy-MM-dd HH:mm")</MudText>
            </CardHeaderContent>
            <CardHeaderActions>
                @switch(Type)
                {
                    case 1:
                        <MudChip Color="Color.Info">@Localizer["announcement-info"]</MudChip>
                        break;
                    default:
                        <MudChip Color="Color.Error">@Localizer["announcement-important"]</MudChip>
                        break;
                }
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardContent>
            <MudText Typo="Typo.body1">
                @AnnouncementBody
            </MudText>
        </MudCardContent>
    </MudCard>
</MudItem>

@code {
    [Parameter]
    public string FirstName {get;set;}
    [Parameter]
    public string LastName {get;set;}
    [Parameter]
    public DateTime PublishDate {get;set;}
    [Parameter]
    public int Type {get;set;}
    [Parameter]
    public string AnnouncementBody {get;set;}
}